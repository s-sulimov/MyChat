<Window x:Class="Sulimov.MyChat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sulimov.MyChat.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="UserLabel" Content="Please sign in" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="189" Height="30" />
        <Button x:Name="SignUp" Content="Sign Up" Click="SignUp_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="204,10,0,0" Width="60" Height="30"/>
        <Button x:Name="SignIn" Content="Sign In" Click="SignIn_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="269,10,0,0" Width="60" Height="30"/>
        <Grid HorizontalAlignment="Center" Height="379" Margin="0,45,0,0" VerticalAlignment="Top" Width="780">
            <ListBox x:Name="ChatList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,605,0"/>
        </Grid>
    </Grid>
</Window>
