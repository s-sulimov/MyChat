<Window x:Class="Sulimov.MyChat.Client.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sulimov.MyChat.Client"
        mc:Ignorable="d"
        Title="SignIn" Height="127" Width="300">
    <Grid>
        <Label x:Name="LoginLabel" Content="Login:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="18" Padding="0,0,0,0"/>
        <Label x:Name="PasswordLabel" Content="Password:" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.053,1.119" Height="18" Padding="0,0,0,0"/>
        <TextBox x:Name="LoginTxtBox" Margin="67,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18"/>
        <TextBox x:Name="PasswordTxtBox" Margin="67,33,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18"/>
        <Button x:Name="SignInBtn" Content="Sign In" HorizontalAlignment="Left" Margin="95,57,0,0" VerticalAlignment="Top" Width="55" Height="20" Click="SignInBtn_Click"/>
        <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="155,57,0,0" VerticalAlignment="Top" Width="55" Height="20" Click="CancelBtn_Click"/>

    </Grid>
</Window>
